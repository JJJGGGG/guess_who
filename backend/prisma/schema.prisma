generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Room {
  id      Int        @id @default(autoincrement())
  boards  Board[]
}

model Board {
  id       Int      @id @default(autoincrement())
  roomId   Int
  playerId String
  tiles    Tile[]
  room Room         @relation(fields: [roomId], references: [id])
  chosenRow Int?
  chosenCol Int?
}

model Tile {
  id       Int      @id @default(autoincrement())
  row      Int
  col      Int
  name     String
  photo    String
  url      String
  boardId  Int     @unique
  board    Board   @relation(fields: [boardId], references: [id])
}